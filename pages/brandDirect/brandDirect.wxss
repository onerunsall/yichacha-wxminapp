  color: #fff;
  background: #FAD5CA;
  border-radius: 11rpx;
  position: relative;
}
.itemRight .progress>view{
  display: inline-block;
  width: 50%;
  border-radius: 11rpx;
  height: 100%;
  background: rgb(237,85,40);
}
.itemRight .progress>text{
   left: 11rpx;
   position: absolute;

}
