}
.proItem{
  width: 702rpx;
  height: 260rpx;
  border-radius: 10rpx;
  border: 0;
  background: #fff;
  margin-bottom: 24rpx;
  overflow: hidden;
}
.imageItem{
   width: 260rpx;
  height: 260rpx;
  /* background: url('https://yichacha.njshangka.com/resource/adsbg.png') no-repeat; */
  background-size: cover;
  background-position: center;
  display: inline-block;
  float: left;
}
.itemRight{
  width: 432rpx;
  display: inline-block;
  float: left;
  padding-left: 10rpx;
}
.itemRight>.title{
  height: 80rpx;
  width:410rpx;
  display: inline-block; 
  display:-webkit-box;
-webkit-line-clamp:2;
-webkit-box-orient:vertical;
overflow:hidden;
font-size: 30rpx;
color: rgb(51,51,51);
line-height: 40rpx;
margin: 10rpx 0;
}
.itemRight .progress{
  width: 300rpx;
  height: 22rpx;
  font-size: 18rpx;
