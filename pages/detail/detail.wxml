<!--pages/detail/detail.wxml-->
<view>
  <view id="dataList"  wx:for="{{dataDetail}}"  wx:key="dataDetail" data-index="{{index}}">
    <view class="details">
      <text class="name">[{{item.name}}]</text>
      <text class="value">{{item.value}}</text>
    </view>
  </view>
  <view class="img_list" id="jq22">
    <view wx:for="{{imgalist}}" wx:for-item="image" class="previewimg">
      <image src="http://www.njshangka.com{{image}}" data-src="{{image}}" bindtap="previewImage"></image>
    </view>
  </view>
</view>
<view class='btn'>
    <view class="footer_1 lf"  data-url='{{url}}' bindtap='url'>
    <image  src="../icon/icon-contact-2.png" alt=""></image>
        <text>前往厂商</text>
    </view>
    <view class="footer_2 lf" data-phone='{{phone}}' bindtap='phone'>
    <image  src="../icon/icon-contact-3.png" alt=""></image>
        <text>直接询价</text>
    </view>
</view>

<!-- 遮罩层 -->
<view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
<!-- 弹出层 -->
<view class="modalDlg" wx:if="{{showModal}}">
<!-- 二维码或其他图片 -->
<text style='text-align:center;color:#333;font-size:30rpx;margin-top:40rpx;'>请长按复制网址</text>
    <text class="text" selectable="true" style='text-align:center'>{{urlText}}</text>
    <view bindtap="ok" class="ok">确认</view>
</view>