/* pages/feedback/feedback.wxss */
page{
  background: #fff;
}
.box{
  width: 702rpx;
  height: 764rpx;
  background: #fff;
  position: relative;
  box-shadow: 0  0 16rpx rgba(0,0,0,0.1);
   margin-left: 24rpx;
  margin-top: 20rpx;
}
.box textarea{
  width: 100%;
  height: 685rpx;
  padding: 20rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #000; 
}
.box text{
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 30rpx;
  color: #999;
}
.placeholder{
  font-size: 30rpx;
  color: #999
}
.makesure{
  width: 450rpx;
  height: 84rpx;
  border-radius: 42rpx;
  margin: 100rpx 150rpx;
  background: rgb(2,175,101);
  font-size: 32rpx;
  line-height: 84rpx;
  text-align: center;
  color: #fff;
}